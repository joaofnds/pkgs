{
	"$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": { "noStaticOnlyClass": "off" },
			"style": { "useImportType": "off" }
		}
	},
	"formatter": { "enabled": true }
}
