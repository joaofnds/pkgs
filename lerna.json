{
	"$schema": "node_modules/lerna/schemas/lerna-schema.json",
	"version": "independent",
	"npmClient": "pnpm",
	"command": {
		"publish": {
			"registry": "https://npm.pkg.github.com",
			"allowBranch": "main"
		},
		"version": {
			"message": "chore(release): publish",
			"conventionalCommits": true,
			"changelog": false,
			"allowBranch": "main",
			"ignoreChanges": ["**/*.md", ".github/**/*.yaml"]
		}
	}
}
